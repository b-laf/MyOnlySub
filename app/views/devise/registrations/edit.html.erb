<div class="container-login" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(http://res.cloudinary.com/dzdm1lpgi/image/upload/v1678279327/owme6ndu3v4bknv84nda.jpg)">

   <div class="login-sign-up">

    <h2 class="title-login">Edit <%= resource_name.to_s.humanize %></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, placeholder: 'First Name',
                      label: false,
                      input_html: { class: 'input-login-edit' } %>
          <%= f.input :last_name, placeholder: 'Last Name',
                      label: false,
                      input_html: { class: 'input-login-edit' }%>
          <%= f.input :age, placeholder: 'Age',
                      label: false,
                      input_html: { class: 'input-login-edit' } %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      label: false,
                      placeholder: 'Email',
                      input_html: { class: 'input-login-edit' } %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password,
                      hint: "Leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "new-password" },
                      label: false,
                      placeholder: 'New Password',
                      input_html: { class: 'input-login-edit' } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password" },
                      label: false,
                      placeholder: 'Password Confirmation',
                      input_html: { class: 'input-login-edit' } %>
          <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password" },
                      label: false,
                      placeholder: 'Current Password',
                      input_html: { class: 'input-login-edit' } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Update", :class => "btn-login2" %>
        </div>
      <% end %>

  </div>
</div>

<h3>Cancel my account</h3>

<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%= link_to "Back", :back %>
