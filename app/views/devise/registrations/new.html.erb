<div class="container-login" style="background-image: url(https://images.unsplash.com/photo-1678127326276-985d27c8e44c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80)">

   <div class="login-sign-up">

    <h2 class="title-login">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, placeholder: 'First Name',
                      label:false,
                      input_html: { class: 'input-login' } %>
          <%= f.input :last_name, placeholder: 'Last Name',
                      label:false,
                      input_html: { class: 'input-login' }%>
          <%= f.input :age, placeholder: 'Age',
                      label:false,
                      input_html: { class: 'input-login' } %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      placeholder: 'Email',
                      label:false,
                      input_html: { class: 'input-login' }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      placeholder: 'Password',
                      label:false,
                      input_html: { class: 'input-login' } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      placeholder: 'Password confirmation',
                      label:false,
                      input_html: { class: 'input-login' } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", :class => "btn-login2" %>
        </div>
      <% end %>

  </div>
</div>
