<div class="container-login" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(http://res.cloudinary.com/dzdm1lpgi/image/upload/v1678788400/evldce4asqeptd3eapqb.jpg)">

   <div class="login-sign-up">

    <h2 class="title-login">Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, placeholder: 'First Name',
                      label:false,
                      input_html: { class: 'input-login' } %>
          <%= f.input :last_name, placeholder: 'Last Name',
                      label:false,
                      input_html: { class: 'input-login' }%>
          <%= f.input :age, placeholder: 'Age',
                      label:false,
                      input_html: { class: 'input-login' } %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      placeholder: 'Email',
                      label:false,
                      input_html: { class: 'input-login' }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      placeholder: 'Password',
                      label:false,
                      input_html: { class: 'input-login' } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      placeholder: 'Password confirmation',
                      label:false,
                      input_html: { class: 'input-login' } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", :class => "btn-login2" %>
        </div>
      <% end %>

  </div>
</div>
