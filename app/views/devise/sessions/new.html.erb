<div class="container-login" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('grand-hotel.jpg') %>)">
   <div class="login">
    <h2 class="title-login">Have an account?</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: 'Email',
                    label:false,
                    input_html: { class: 'input-login' }
                    %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    placeholder: 'Password',
                    label:false,
                    input_html: { class: 'input-login' }
                    %>
        <div class="bottom-btn">
          <%= f.input :remember_me, input_html: { class: 'btn-remember' }, as: :boolean if devise_mapping.rememberable? %>
          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot Password?", new_password_path(resource_name), class:"btn-forgot" %>
        </div>
      </div>
    <% end %>

      <div class="form-actions">
        <%= f.submit "Sign In", :class => "btn-login" %>
      </div>
      <div class="bottom-btn3">
            <p style="color: white">Don't have an account?</p>
        <%= link_to "Create an account", new_user_registration_path, class:"btn-forgot" %>
      </div>
    <% end %>
  </div>
</div>
