<div class="container-login" style="background-image: url(https://images.unsplash.com/photo-1678127326276-985d27c8e44c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80)">
   <div class="login">
    <h2 class="title-login">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: 'Email',
                    label:false,
                    input_html: { class: 'input-login' }
                    %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", :class => "btn-login2" %>
      </div>
    <% end %>

      <div class="bottom-btn2">
            <%= link_to "Sign in", new_user_session_path, class:"btn-forgot2" %>
            <%= link_to "Sign up", new_user_registration_path, class:"btn-forgot2" %>
      </div>

  </div>
</div>
