<div class="container-login" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(http://res.cloudinary.com/dzdm1lpgi/image/upload/v1678279327/owme6ndu3v4bknv84nda.jpg)">
   <div class="login">
    <h2 class="title-login">Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: 'Email',
                    label:false,
                    input_html: { class: 'input-login' }
                    %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", :class => "btn-login2" %>
      </div>
    <% end %>

      <div class="bottom-btn2">
            <%= link_to "Sign in", new_user_session_path, class:"btn-forgot2" %>
            <%= link_to "Sign up", new_user_registration_path, class:"btn-forgot2" %>
      </div>

  </div>
</div>
