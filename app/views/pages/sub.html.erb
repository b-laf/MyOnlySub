<div class="container" data-controller="infos animation content-loader" >

<div>
  <div data-action="load@window->animation#animate"></div>
</div>

  <div class="suggestion">
    <h4 class="d-flex justify-content-center">Suggestion for the next month:</h4>
    <div class="d-flex justify-content-center">
      <div class="divbutton">
        <div class="image" data-action="click->animation#display"  data-animation-target="platform">
          <%= image_tag("#{@platform_for_logo}.png", width:180, crop: :fill)%>
        </div>
        <button class="button" data-action="click->infos#display">i</button>
      </div>
      <div class = "informations d-none" data-infos-target= "info">
        <%= render "platforms", platform: @final_answer %>
      </div>
    </div>
  </div>

    <div class="d-flex">
      <div>
        <h4>Series to watch on <%= @final_answer.capitalize %> during the month:</h4>
        <div class="d-flex flex-row flex-wrap">
          <% @movies_necessary.each do |movie| %>
            <% if movie[:category] == "series" && movie[:platform] == @platform_for_filter %>
                <%= render "cardmovie", movie: movie %>
            <% end %>
          <% end %>
        </div>
      </div>

      <div>
        <h4>Movies to watch on <%= @final_answer.capitalize %> during the month:</h4>
        <div class="d-flex flex-row flex-wrap">
          <% @movies_necessary.each do |movie| %>
            <% if movie[:category] == "movie" && movie[:platform] == @platform_for_filter %>
              <%= render "cardmovie", movie: movie %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="d-flex">
      <div>
        <h4>Series to watch on <%= @final_answer.capitalize %> if you have even more time:</h4>
        <div class="d-flex flex-row flex-wrap">
          <% @movies_optional.each do |movie| %>
            <% if movie[:category] == "series" && movie[:platform] == @platform_for_filter %>
                <%= render "cardmovie", movie: movie %>
            <% end %>
          <% end %>
        </div>
      </div>

      <div>
        <h4>Movies to watch on <%= @final_answer.capitalize %> if you have even more time:</h4>
          <div class="d-flex flex-row flex-wrap">
            <% @movies_optional.each do |movie| %>
              <% if movie[:category] == "movie" && movie[:platform] == @platform_for_filter %>
                <%= render "cardmovie", movie: movie %>
              <% end %>
            <% end %>
          </div>
      </div>
    </div>
</div>
